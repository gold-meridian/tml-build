    <Target Name="ProcessTMLVersionBeforeReferencesAreResolved" BeforeTargets="ResolveReferences">
        <TmlVersionTask TMLBuildPath="$(TMLBuildBinaryPath)" Version="$(TMLVersion)" TargetsPath="$(TMLTargetsPath)"/>
    </Target>

</Project>